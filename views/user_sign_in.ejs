<link rel="stylesheet" href="/css/user_sign_in.css">

<br>
<br>

<br>
<div class="container-box shadow-lg p-3 mb-5 bg-white rounded mt-5">
  <br>
  <h1><%= title %></h1>

  <form action="/users/create-session" method="POST">
    <div class="form-group">
      <input type="email" class="form-control input" name="email" placeholder="Username" required>
    </div>

    <div class="form-group">
      <input type="password" class="form-control input" name="password" placeholder="Password" required>
    </div>

    <div class="mb-4">
      <input class="form-check-input" type="checkbox">
      <label class="form-check-label">
        Remember me
      </label>
    </div>

    <button type="submit" class="btn btn-primary" value="Sign In">Sign In</button>
    <button type="reset" class="btn btn-secondary">Clear All</button>

    <div class="dropdown-divider"></div>
    <a class="dropdown-item" href="./signup">New around here? Sign up</a>
    <div class="dropdown-divider"></div>
    <a class="dropdown-item" href="/users/ask-password-reset">Forgot password?</a>
    <div class="dropdown-divider"></div>
    <a class="dropdown-item" href="/users/auth/google"><img src="/images/google.png" alt="Sign In/Up With Google"> Sign
      In With Google</a>
</div>
</form>

